<div class="container">
    <div id="contentOfPage">
        <h1 id="centreTitle" class="display-4 titleFont"><%= title %></h1>
        <br />
        <div class="card" style="width: 900px; margin: auto">
                <div class="card-header">Contact Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                    <h5>Name:</h5>
                    <h5>Email:</h5>
                    <h5>Company:</h5>
                    <h5>Address:</h5>
                    <h5>Hours of availability:</h5>
                    <h5>Days of availability:</h5>
                </div>
                    <div class="col" style="padding-right: 13rem">
                    <h5>Ali Mokheamer</h5>
                    <h5>theventurer54562ty4@gmail.com</h5>
                    <h5>Centennial College</h5>
                    <h5>941 Progress Ave, Scarborough, ON</h5>
                    <h5>8 A.M - 7 P.M</h5>
                    <h5>Monday-Sunday</h5>
                </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <h5 class="fontForParagraph">
            To contact me, please fill out this form below
        </h5>
        <br />
        <p>*required</p>
        <br />
        <div class="contact-form">
            <form action="" class="form" method="POST" autocomplete="on">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5">
                            <label for="FirstNameTxtFiled">First Name*</label>
                            <input type="text" class="form-control" id="FirstNameTextBox" placeholder="Bill"
                                name="firstNameTxtBox" required maxlength="50" autofocus />
                        </div>
                        <div class="col-md-5">
                            <label for="LastNameTxtFiled">Last Name*</label>
                            <input type="text" class="form-control" id="LastNameTextBox" placeholder="Doe"
                                name="lastNameTxtBox" required maxlength="50" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5">
                            <label for="EmailTxtFiled">Email*</label>
                            <input type="email" class="form-control" id="EmailTextBox"
                                placeholder="billdoe@somemail.com" name="emailTxtBox" required maxlength="70"
                                autocomplete="off" />
                        </div>
                        <div class="col-md-4">
                            <label>Phone Number*</label>
                            <input type="text" class="form-control" id="PhoneNumNameTextBox" placeholder="123-456-7890"
                                name="phoneNumNameTxtBox" required maxlength="12" style="width: 180px" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="FirstNameTxtFiled">Comments</label>
                    <textarea class="form-control textarea" placeholder="Comment" name="CommentBox" spellcheck="true"
                        rows="6" maxlength="400" autocomplete="off"></textarea>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <a href="/" class="btn btn-primary" role="button" aria-pressed="true"
                            style="width: 100px">Submit</a>
                        <button type="reset" class="btn btn-secondary" style="margin-left: 4rem; width: 100px">
                            Refresh
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>