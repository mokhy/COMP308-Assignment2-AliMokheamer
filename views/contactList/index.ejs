
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <a class="btn btn-primary" href="/contacts/add" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact</a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">First Name</th>
                        <th class="text-center">Last Name</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Telephone #</th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < contactList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= contactList[count].firstName %></td>
                            <td class="text-center"><%= contactList[count].lastName %></td>
                            <td class="text-center"><%= contactList[count].email %></td>
                            <td class="text-center"><%= contactList[count].telephone %></td>

                            <td class="text-center">
                            <a href="/contacts/edit/<%= contactList[count]._id %>"
                                class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a>
                            </td>

                            <td class="text-center">
                                    <a href="/contacts/delete/<%= contactList[count]._id %>"
                                        class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                                    </td>
                        </tr>
                    <% } %>
                </table>

            </div>
        </div>
    </div>
    